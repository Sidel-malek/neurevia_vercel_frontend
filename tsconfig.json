{
  "compilerOptions": {
    "baseUrl": ".",                  // <-- à ajouter
    "paths": {
      "@/*": ["src/*"]              // <-- à ajouter
    },
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler", /**node*/
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/home/layout.tsx", ".next/types/app/diagnosis/alzheimer/page.tsx"  ],
  "exclude": ["node_modules"]
}

